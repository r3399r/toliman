{
  "name": "toliman",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none PORT=3006 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "test:nowatch": "npm run test -- --watchAll=false",
    "eject": "react-scripts eject",
    "lint:ts": "tslint --project .",
    "fix:ts": "npm run lint:ts -- --fix",
    "lint:format": "prettier --list-different \"{src,public}/**/*.{tsx,ts,html,scss,json}\"",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-s lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli build -f",
    "pre:dev": "run-s clean fix build test:nowatch",
    "pre:commit": "run-s lint test:nowatch",
    "pre:deploy": "run-s clean build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@loadable/component": "^5.14.1",
    "@mui/material": "^5.4.4",
    "better-react-mathjax": "^2.0.0",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.20.11",
    "@types/react": "^17.0.4",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "cross-env": "^7.0.3",
    "del-cli": "^3.0.1",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.8",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  },
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.0.0"
  },
  "homepage": "https://r3399r.github.io/toliman/"
}
