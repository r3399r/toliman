{
  "name": "toliman",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none PORT=3006 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "test:nowatch": "npm run test -- --watchAll=false",
    "eject": "react-scripts eject",
    "lint:es": "eslint -c ./eslint.json src",
    "fix:es": "npm run lint:es -- --fix",
    "lint:format": "prettier --list-different \"{src,public}/**/*.{tsx,ts,js,html,scss,json}\"",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-s lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli build -f",
    "pre:dev": "run-s clean fix build test:nowatch",
    "pre:commit": "run-s lint test:nowatch",
    "pre:deploy": "run-s clean build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@mui/material": "^5.4.4",
    "better-react-mathjax": "^2.0.0",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.168",
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.41",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.14",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^7.0.3",
    "del-cli": "^3.0.1",
    "eslint": "^8.11.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.4",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.8",
    "jest-watch-typeahead": "^0.6.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-scripts": "5.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.52.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  },
  "homepage": "https://r3399r.github.io/toliman/"
}
