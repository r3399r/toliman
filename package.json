{
  "name": "react-pwa-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "test:nowatch": "npm run test -- --watchAll=false",
    "eject": "react-scripts eject",
    "lint:ts": "tslint --project .",
    "fix:ts": "npm run lint:ts -- --fix",
    "lint:format": "prettier --list-different \"{src,public}/**/*.{tsx,ts,html,scss,json}\"",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-s lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli dist -f",
    "pre:dev": "run-s clean fix build test:nowatch",
    "pre:commit": "run-s lint test:nowatch",
    "pre:deploy": "run-s clean build"
  },
  "dependencies": {
    "@loadable/component": "^5.14.1",
    "dropbox": "^9.2.0",
    "isomorphic-fetch": "^3.0.0",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.15.5",
    "react-mathjax": "^1.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "uikit": "^3.6.17",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-mathjax": "^1.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/uikit": "^3.3.1",
    "cross-env": "^7.0.3",
    "del-cli": "^3.0.1",
    "husky": "^4.3.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.1.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 2,
        "branches": 0,
        "functions": 4,
        "lines": 3
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  }
}
